{
  "manifest_version": 3,
  "name": "Form Auto-Fill",
  "version": "2.0.0",
  "description": "Automatically fills form fields with saved values on any website. Supports custom configurations.",

  "permissions": [
    "storage"
  ],

  "optional_permissions": [
    "scripting"
  ],

  "optional_host_permissions": [
    "<all_urls>"
  ],

  "host_permissions": [
    "https://nidp.tau.ac.il/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
